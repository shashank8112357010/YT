# Production Security Configuration
# Note: NODE_ENV is set by PM2/deployment process, not in .env

# CORS Configuration
ALLOWED_ORIGINS=https://yt.techassistant.co.in,https://www.yt.techassistant.co.in

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Security Headers
CSP_REPORT_URI=https://yt.techassistant.co.in/api/csp-report

# Logging
LOG_LEVEL=error

# SSL/TLS (if using custom SSL)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Content Limits
MAX_REQUEST_SIZE=10mb
MAX_URL_LENGTH=2048
MAX_TABS_PER_REQUEST=10

# Session Security
SESSION_SECRET=your-very-long-random-string-here
SECURE_COOKIES=true

# Monitoring
HEALTH_CHECK_TOKEN=your-health-check-token
